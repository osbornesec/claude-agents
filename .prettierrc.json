{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "trailingComma": "none",
  "bracketSpacing": true,
  "proseWrap": "always",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": ["*.md", "*.markdown"],
      "options": {
        "printWidth": 100,
        "proseWrap": "always",
        "singleQuote": false,
        "embeddedLanguageFormatting": "off"
      }
    }
  ]
}
